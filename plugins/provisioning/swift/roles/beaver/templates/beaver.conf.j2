# {{ ansible_managed }}

[beaver]
logstash_version: 1
{% if hostvars[inventory_hostname]['container_address'] is defined %}
hostname: {{ hostvars[inventory_hostname]['container_address'] }}
{% else %}
hostname: {{ inventory_hostname }}
{% endif %}
transport: tcp
tcp_host: {{ logstash_listen_address }}
tcp_port: {{ logstash_tcp_port }}
