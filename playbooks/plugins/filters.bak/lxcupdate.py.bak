
def updatelxc(lxcs, update):
    for i, lxc in enumerate(lxcs):
        if 'address' not in lxc and lxc['name'] == update['name']:
            lxc.update('address', update['address'])
    return lxcs

class FilterModule(object):
    def filters(self):
        return {
            'updatelxc': updatelxc,
        }

